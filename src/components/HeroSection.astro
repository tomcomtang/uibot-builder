---
/**
 * Hero Section 组件 - 首屏主视觉区域
 * 包含标题、副标题、描述文本和 CTA 按钮
 */
import StreamCanvas from './StreamCanvas.astro';
---

<header class="hero-section">
  <div class="gradient-background" data-id="gradient">
    <div class="hero-content" data-id="content">
      <!-- 粒子流动特效区域 -->
      <div class="canvas-wrapper">
        <StreamCanvas />
      </div>
      
      <!-- 标题文案区域 -->
      <div class="hero-text">
        <h1 class="hero-title">Flexible Payments Security</h1>
        <h2 class="hero-subtitle">Maximum protection, minimum compliance burden</h2>
        <p class="hero-description">
          Take control of your payments stack — easily tokenize cards, optimize margins, 
          comply with PCI, avoid gateway lock-in, or spin-up card issuing programs.
        </p>
        <a class="cta-button" href="/contact">
          Talk to an Expert
          <svg width="10" height="10" viewBox="0 0 10 10" class="arrow-icon" aria-hidden="true">
            <path d="M0 5h7" class="line"></path>
            <path d="M1 1l4 4-4 4" class="chevron"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</header>

<style>
  .hero-section {
    position: relative;
    width: 100%;
    height: 100vh;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    padding-bottom: 1rem; /* 底部小间隙 */
    overflow: hidden;
  }

  .gradient-background {
    position: relative;
    width: calc(100% - 1.5rem);
    height: 80vh;
    display: grid;
    place-items: center;
    padding: 0 2rem;
    margin: 0 0.75rem;
    
    /* 圆角渐变背景卡片 - 关键样式！ */
    border-radius: 48px; /* 四周圆角 */
    background: radial-gradient(140% 107.13% at 50% 10%, transparent 37.41%, #6633ee 69.27%, #ffffff 100%);
    overflow: hidden;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 1200px;
    width: 100%;
    padding: 0 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: -10vh; /* 整体往上移动 */
  }

  .canvas-wrapper {
    width: calc(100vw - 5rem); /* 铺满卡片宽度 */
    max-width: none;
    display: flex;
    justify-content: center;
    margin-bottom: 0.5rem;
  }

  .hero-text {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    pointer-events: all;
  }

  .hero-title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 700;
    line-height: 1.1;
    color: #ffffff;
    margin: 0;
    background: linear-gradient(135deg, #ffffff 0%, #e0e0e0 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: clamp(1.25rem, 3vw, 1.75rem);
    font-weight: 600;
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
  }

  .hero-description {
    font-size: clamp(1rem, 2vw, 1.125rem);
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.75);
    max-width: 600px;
    margin: 0;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    font-size: 1rem;
    font-weight: 600;
    color: #ffffff;
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
    border: none;
    border-radius: 12px;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 10px 30px rgba(99, 102, 241, 0.3);
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 15px 40px rgba(99, 102, 241, 0.5);
  }

  .arrow-icon {
    width: 10px;
    height: 10px;
    transition: transform 0.3s ease;
  }

  .cta-button:hover .arrow-icon {
    transform: translateX(3px);
  }

  .arrow-icon .line,
  .arrow-icon .chevron {
    stroke: currentColor;
    stroke-width: 2;
    fill: none;
  }

  .arrow-icon .line {
    transition: transform 0.3s ease;
  }

  .arrow-icon .chevron {
    stroke-linecap: round;
    stroke-linejoin: round;
  }

  @media (max-width: 768px) {
    .hero-section {
      height: 100vh;
      padding-bottom: 0.75rem;
    }

    .gradient-background {
      width: calc(100% - 0.5rem);
      height: 75vh;
      margin: 0 0.25rem;
      padding: 0 1rem;
      border-radius: 32px;
    }

    .hero-content {
      padding: 0 1.5rem;
    }

    .hero-text {
      gap: 1.25rem;
    }

    .cta-button {
      padding: 0.875rem 1.75rem;
      font-size: 0.9375rem;
    }
  }

  @media (max-width: 480px) {
    .hero-section {
      height: 100vh;
      padding-bottom: 0.5rem;
    }

    .gradient-background {
      height: 70vh;
      border-radius: 24px;
    }

    .hero-text {
      gap: 1rem;
    }
  }
</style>
